<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:layout_conversion_absoluteHeight="178dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />

    <Button
        android:id="@+id/timer_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_start"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/timer_button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_stop"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/timer_button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_reset"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>