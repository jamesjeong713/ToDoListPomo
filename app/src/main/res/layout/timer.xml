<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:id="@+id/linearLayout">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:focusable="auto"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="20dp"
        tools:layout_conversion_absoluteHeight="300dp"
        tools:layout_conversion_absoluteWidth="400dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/timer_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_start"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/timer_button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_stop"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/timer_button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_reset"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>