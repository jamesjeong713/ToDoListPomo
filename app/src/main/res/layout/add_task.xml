<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/add_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Task"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/add_task_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Add your new task"
        android:textColor="#000"
        android:layout_below="@id/add_task_title"
        />

    <EditText
        android:id="@+id/add_task_sets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_subtitle"
        android:layout_marginLeft="10dp"
        android:hint="Add sets how many times wil you study"
        />

    <EditText
        android:id="@+id/add_task_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_sets"
        android:layout_marginLeft="10dp"

        android:hint="Write your task's name" />

    <Button
        android:id="@+id/add_task_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="96dp"
        android:text="YES" />

    <Button
        android:id="@+id/add_task_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:text="NO" />

</RelativeLayout>